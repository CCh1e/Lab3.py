print("--- Завдання 3 ---")
sentence = input("Введіть речення: ")

# Очищення від пунктуації
punctuations = ".,!?:;"
for p in punctuations:
    sentence = sentence.replace(p, "")

words = sentence.split()

print("Слова, що зустрічаються один раз:")
for word in words:
    if words.count(word) == 1:
        print(word)
